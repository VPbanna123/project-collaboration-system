// User Service - Owns User data only
// Database: user_db (port: 5432)

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User synced from Clerk - PRIMARY DATA OWNER
model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  imageUrl  String?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([clerkId])
  @@index([email])
  @@map("users")
}

// Cached user data for quick lookups (denormalized from other services)
model UserCache {
  id              String   @id @default(cuid())
  userId          String   @unique
  teamCount       Int      @default(0)
  projectCount    Int      @default(0)
  unreadMessages  Int      @default(0)
  lastActivityAt  DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([userId])
  @@index([lastActivityAt])
  @@map("user_cache")
}